@using StudentEnrollmentSystem.Models.Enums
@{
    ViewData["Title"] = "Process Payment";
    var students = ViewBag.Students as List<StudentEnrollmentSystem.Models.ApplicationUser>;
    var paymentMethods = ViewBag.PaymentMethods as List<PaymentMethod>;
    var selectedStudentId = ViewBag.SelectedStudentId as string;
    var studentBalance = ViewBag.StudentBalance as decimal?;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4><i class="bi bi-cash-coin"></i> Process Student Payment</h4>
                </div>
                <div class="card-body">
                    @if (ViewData.ModelState.ErrorCount > 0)
                    {
                        <div class="alert alert-danger">
                            <ul class="mb-0">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    }

                    <form asp-action="ProcessPayment" method="post">
                        <div class="mb-3">
                            <label for="studentId" class="form-label">Select Student *</label>
                            <select name="studentId" id="studentId" class="form-select" required onchange="this.form.submit()">
                                <option value="">-- Select Student --</option>
                                @if (students != null)
                                {
                                    foreach (var student in students)
                                    {
                                        <option value="@student.Id" selected="@(student.Id == selectedStudentId)">
                                            @student.StudentNumber - @student.FullName
                                        </option>
                                    }
                                }
                            </select>
                        </div>

                        @if (!string.IsNullOrEmpty(selectedStudentId))
                        {
                            <div class="alert alert-info">
                                <h6><i class="bi bi-info-circle"></i> Student Balance Information</h6>
                                <p class="mb-1"><strong>Current Balance:</strong> ₱@(studentBalance?.ToString("N2") ?? "0.00")</p>
                                <p class="mb-0"><strong>Minimum Required Payment (30%):</strong> ₱@((studentBalance * 0.30m ?? 0).ToString("N2"))</p>
                            </div>

                            <div class="mb-3">
                                <label for="amount" class="form-label">Payment Amount (₱) *</label>
                                <input type="number" step="0.01" min="0.01" name="amount" id="amount" class="form-control" required placeholder="0.00">
                            </div>

                            <div class="mb-3">
                                <label for="paymentMethod" class="form-label">Payment Method *</label>
                                <select name="paymentMethod" id="paymentMethod" class="form-select" required>
                                    <option value="">-- Select Payment Method --</option>
                                    @if (paymentMethods != null)
                                    {
                                        foreach (var method in paymentMethods)
                                        {
                                            <option value="@((int)method)">@method.ToString()</option>
                                        }
                                    }
                                </select>
                            </div>

                            <div class="mb-3">
                                <label for="remarks" class="form-label">Remarks (Optional)</label>
                                <textarea name="remarks" id="remarks" class="form-control" rows="3" placeholder="Enter any notes or comments about this payment"></textarea>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-success btn-lg">
                                    <i class="bi bi-check-circle"></i> Process Payment
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="bi bi-x-circle"></i> Cancel
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning">
                                <i class="bi bi-exclamation-triangle"></i> Please select a student to continue.
                            </div>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

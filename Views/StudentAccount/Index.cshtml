@{
    ViewData["Title"] = "My Account";
    var account = ViewBag.Account as StudentEnrollmentSystem.Models.StudentAccount;
    var fees = ViewBag.Fees as List<StudentEnrollmentSystem.Models.Fee>;
    var payments = ViewBag.Payments as List<StudentEnrollmentSystem.Models.Payment>;
    var enrollmentsAwaitingPayment = ViewBag.EnrollmentsAwaitingPayment as List<StudentEnrollmentSystem.Models.Enrollment>;
    var requiredPayment = (decimal)ViewBag.RequiredPayment;
}

<div class="container mt-4">
    <h2><i class="bi bi-wallet2"></i> My Account</h2>
    <p class="text-muted">View your balance, fees, and payment history</p>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (account != null)
    {
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card border-primary">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="bi bi-info-circle"></i> Account Summary</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Semester:</strong> @account.Semester</p>
                        <p><strong>Academic Year:</strong> @account.AcademicYear</p>
                        <hr>
                        <div class="row mb-2">
                            <div class="col-7">
                                <strong>Total Billed:</strong>
                            </div>
                            <div class="col-5 text-end">
                                <span class="text-danger fs-5">₱@account.TotalBilled.ToString("N2")</span>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-7">
                                <strong>Total Paid:</strong>
                            </div>
                            <div class="col-5 text-end">
                                <span class="text-success fs-5">₱@account.TotalPaid.ToString("N2")</span>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-7">
                                <h5><strong>Current Balance:</strong></h5>
                            </div>
                            <div class="col-5 text-end">
                                <h4 class="@(account.CurrentBalance > 0 ? "text-danger" : "text-success") mb-0">
                                    ₱@account.CurrentBalance.ToString("N2")
                                </h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card border-warning">
                    <div class="card-header bg-warning">
                        <h5 class="mb-0"><i class="bi bi-calculator"></i> Payment Requirement</h5>
                    </div>
                    <div class="card-body">
                        <p>To proceed with enrollment, you must pay <strong>at least 30%</strong> of your total balance.</p>
                        <hr>
                        <div class="row mb-3">
                            <div class="col-7">
                                <strong>Minimum Required (30%):</strong>
                            </div>
                            <div class="col-5 text-end">
                                <h5 class="text-primary mb-0">₱@requiredPayment.ToString("N2")</h5>
                            </div>
                        </div>
                        @{
                            var percentagePaid = account.TotalBilled > 0 ? (account.TotalPaid / account.TotalBilled) * 100 : 0;
                        }
                        <div class="progress mb-2" style="height: 30px;">
                            <div class="progress-bar @(percentagePaid >= 30 ? "bg-success" : "bg-danger")"
                                 role="progressbar"
                                 style="width: @Math.Min(percentagePaid, 100)%"
                                 aria-valuenow="@percentagePaid"
                                 aria-valuemin="0"
                                 aria-valuemax="100">
                                <strong>@percentagePaid.ToString("F1")% Paid</strong>
                            </div>
                        </div>
                        @if (percentagePaid >= 30)
                        {
                            <div class="alert alert-success mb-0">
                                <i class="bi bi-check-circle"></i> You've met the minimum payment requirement!
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning mb-0">
                                <i class="bi bi-exclamation-triangle"></i> You need to pay at least ₱@((requiredPayment - account.TotalPaid).ToString("N2")) more.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        @if (enrollmentsAwaitingPayment != null && enrollmentsAwaitingPayment.Any())
        {
            <div class="alert alert-info">
                <h5><i class="bi bi-exclamation-circle"></i> Enrollment Awaiting Payment</h5>
                <p>You have enrollments that require payment before they can be processed:</p>
                <ul class="mb-0">
                    @foreach (var enrollment in enrollmentsAwaitingPayment)
                    {
                        <li>
                            <strong>@enrollment.Course.CourseCode - @enrollment.Course.Name</strong>
                            <a asp-action="MakePayment" asp-route-enrollmentId="@enrollment.Id" class="btn btn-sm btn-success ms-2">
                                <i class="bi bi-cash"></i> Pay Now
                            </a>
                            <a asp-controller="PromissoryNote" asp-action="Submit" asp-route-enrollmentId="@enrollment.Id" class="btn btn-sm btn-warning ms-1">
                                <i class="bi bi-file-earmark-text"></i> Apply for Promissory Note
                            </a>
                        </li>
                    }
                </ul>
            </div>
        }

        <div class="row mb-3">
            <div class="col-md-12">
                <a asp-action="MakePayment" class="btn btn-success btn-lg">
                    <i class="bi bi-cash-coin"></i> Make Payment
                </a>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="mb-0"><i class="bi bi-receipt"></i> My Fees</h5>
                    </div>
                    <div class="card-body">
                        @if (fees != null && fees.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Type</th>
                                            <th>Description</th>
                                            <th class="text-end">Amount</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var fee in fees)
                                        {
                                            <tr>
                                                <td><span class="badge bg-info">@fee.FeeType.ToString()</span></td>
                                                <td><small>@fee.Description</small></td>
                                                <td class="text-end">₱@fee.Amount.ToString("N2")</td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr class="table-light">
                                            <td colspan="2" class="text-end"><strong>Total:</strong></td>
                                            <td class="text-end"><strong>₱@fees.Sum(f => f.Amount).ToString("N2")</strong></td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No fees recorded for this semester.</p>
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="bi bi-cash-stack"></i> Payment History</h5>
                    </div>
                    <div class="card-body">
                        @if (payments != null && payments.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>Reference</th>
                                            <th class="text-end">Amount</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var payment in payments)
                                        {
                                            <tr>
                                                <td><small>@payment.PaymentDate.ToLocalTime().ToString("MMM dd, yyyy")</small></td>
                                                <td>
                                                    <small>@payment.ReferenceNumber</small><br>
                                                    <small class="text-muted">@payment.PaymentMethod.ToString()</small>
                                                </td>
                                                <td class="text-end text-success">₱@payment.Amount.ToString("N2")</td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr class="table-light">
                                            <td colspan="2" class="text-end"><strong>Total Paid:</strong></td>
                                            <td class="text-end"><strong>₱@payments.Sum(p => p.Amount).ToString("N2")</strong></td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No payments recorded yet.</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i> No account information found for the current semester.
        </div>
    }
</div>

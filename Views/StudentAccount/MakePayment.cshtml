@using StudentEnrollmentSystem.Models.Enums
@{
    ViewData["Title"] = "Make Payment";
    var balance = (decimal)ViewBag.Balance;
    var requiredPayment = (decimal)ViewBag.RequiredPayment;
    var enrollment = ViewBag.Enrollment as StudentEnrollmentSystem.Models.Enrollment;
    var enrollmentId = ViewBag.EnrollmentId as int?;
    var paymentMethods = ViewBag.PaymentMethods as List<PaymentMethod>;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4><i class="bi bi-cash-coin"></i> Make Payment</h4>
                </div>
                <div class="card-body">
                    @if (ViewData.ModelState.ErrorCount > 0)
                    {
                        <div class="alert alert-danger">
                            <ul class="mb-0">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    }

                    @if (enrollment != null)
                    {
                        <div class="alert alert-info">
                            <h6><i class="bi bi-book"></i> Payment for Enrollment</h6>
                            <p class="mb-0">
                                <strong>Course:</strong> @enrollment.Course.CourseCode - @enrollment.Course.Name
                            </p>
                        </div>
                    }

                    <div class="alert alert-warning">
                        <h6><i class="bi bi-info-circle"></i> Balance Information</h6>
                        <div class="row">
                            <div class="col-6">
                                <strong>Current Balance:</strong>
                            </div>
                            <div class="col-6 text-end">
                                <span class="text-danger fs-5">₱@balance.ToString("N2")</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <strong>Minimum Required (30%):</strong>
                            </div>
                            <div class="col-6 text-end">
                                <span class="text-primary fs-5">₱@requiredPayment.ToString("N2")</span>
                            </div>
                        </div>
                    </div>

                    <form asp-action="MakePayment" method="post">
                        @if (enrollmentId.HasValue)
                        {
                            <input type="hidden" name="enrollmentId" value="@enrollmentId" />
                        }

                        <div class="mb-3">
                            <label for="amount" class="form-label">Payment Amount (₱) *</label>
                            <input type="number"
                                   step="0.01"
                                   min="0.01"
                                   name="amount"
                                   id="amount"
                                   class="form-control form-control-lg"
                                   required
                                   placeholder="0.00"
                                   value="@requiredPayment.ToString("F2")">
                            <div class="form-text">
                                Enter the amount you wish to pay. Minimum: ₱@requiredPayment.ToString("N2") (30% of balance)
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="paymentMethod" class="form-label">Payment Method *</label>
                            <select name="paymentMethod" id="paymentMethod" class="form-select" required>
                                <option value="">-- Select Payment Method --</option>
                                @if (paymentMethods != null)
                                {
                                    foreach (var method in paymentMethods)
                                    {
                                        <option value="@((int)method)">@method.ToString()</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="alert alert-info">
                            <h6><i class="bi bi-shield-check"></i> Demo Payment System</h6>
                            <p class="mb-0">This is a demo payment system. No actual payment will be processed. A mock payment receipt will be generated for testing purposes.</p>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-check-circle"></i> Submit Payment
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>

                    @if (enrollmentId.HasValue)
                    {
                        <hr>
                        <div class="text-center">
                            <p class="text-muted">Unable to pay? You can apply for a promissory note instead.</p>
                            <a asp-controller="PromissoryNote" asp-action="Submit" asp-route-enrollmentId="@enrollmentId" class="btn btn-warning">
                                <i class="bi bi-file-earmark-text"></i> Apply for Promissory Note
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

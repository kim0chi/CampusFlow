@model StudentEnrollmentSystem.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="row mb-4">
    <div class="col-md-12">
        <h2>
            @if (Model.RoleName == "Student")
            {
                <i class="bi bi-mortarboard-fill text-primary"></i>
            }
            else if (Model.RoleName == "Admin")
            {
                <i class="bi bi-gear-fill text-danger"></i>
            }
            else if (Model.RoleName == "Dean")
            {
                <i class="bi bi-person-badge-fill text-info"></i>
            }
            else
            {
                <i class="bi bi-building text-success"></i>
            }
            Welcome to your @Model.RoleName Dashboard
        </h2>
        <hr />
    </div>
</div>

@if (Model.RoleName == "Student")
{
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <i class="bi bi-journal-check display-4 text-success"></i>
                    <h5 class="mt-2">@Model.MyEnrollments.Count(e => e.Status == StudentEnrollmentSystem.Models.Enums.EnrollmentStatus.Enrolled)</h5>
                    <p class="text-muted mb-0">Enrolled Courses</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <i class="bi bi-clock-history display-4 text-warning"></i>
                    <h5 class="mt-2">@Model.MyEnrollments.Count(e => e.Status != StudentEnrollmentSystem.Models.Enums.EnrollmentStatus.Enrolled && e.Status != StudentEnrollmentSystem.Models.Enums.EnrollmentStatus.Rejected)</h5>
                    <p class="text-muted mb-0">Pending Approval</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <i class="bi bi-book display-4 text-primary"></i>
                    <h5 class="mt-2">@Model.MyEnrollments.Count</h5>
                    <p class="text-muted mb-0">Total Enrollments</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex gap-2">
                <a asp-controller="Enrollment" asp-action="Create" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Enroll in Courses
                </a>
                <a asp-controller="StudentAccount" asp-action="QuarterPayments" class="btn btn-outline-info">
                    <i class="bi bi-cash-stack"></i> Quarter Payments
                </a>
                <a asp-controller="StudentAccount" asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-wallet2"></i> My Account
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0"><i class="bi bi-list-task"></i> Recent Enrollments</h4>
                        <a asp-controller="Enrollment" asp-action="Index" class="btn btn-sm btn-light">
                            View All <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.MyEnrollments.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>Course Code</th>
                                        <th>Course Name</th>
                                        <th>Credits</th>
                                        <th>Status</th>
                                        <th>Submitted Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var enrollment in Model.MyEnrollments)
                                    {
                                        <tr>
                                            <td><strong>@enrollment.Course.CourseCode</strong></td>
                                            <td>@enrollment.Course.Name</td>
                                            <td><span class="badge bg-secondary">@enrollment.Course.Credits cr</span></td>
                                            <td>
                                                @if (enrollment.Status == StudentEnrollmentSystem.Models.Enums.EnrollmentStatus.Enrolled)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="bi bi-check-circle"></i> @enrollment.Status
                                                    </span>
                                                }
                                                else if (enrollment.Status == StudentEnrollmentSystem.Models.Enums.EnrollmentStatus.Rejected)
                                                {
                                                    <span class="badge bg-danger">
                                                        <i class="bi bi-x-circle"></i> @enrollment.Status
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning text-dark">
                                                        <i class="bi bi-hourglass-split"></i> @enrollment.Status
                                                    </span>
                                                }
                                            </td>
                                            <td>@enrollment.SubmittedDate.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <a asp-controller="Enrollment" asp-action="Details" asp-route-id="@enrollment.Id" class="btn btn-sm btn-primary">
                                                    <i class="bi bi-eye"></i> Details
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
                            <p class="mt-3 text-muted">No enrollments found.</p>
                            <a asp-controller="Enrollment" asp-action="Create" class="btn btn-success">
                                <i class="bi bi-plus-circle"></i> Enroll in Courses
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}
else if (Model.RoleName != "Admin")
{
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-info mb-3">
                <div class="card-body">
                    <h6 class="card-title"><i class="bi bi-hourglass-split"></i> Pending</h6>
                    <p class="card-text display-4">@Model.PendingCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success mb-3">
                <div class="card-body">
                    <h6 class="card-title"><i class="bi bi-check-circle"></i> Approved</h6>
                    <p class="card-text display-4">@ViewBag.TotalApproved</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-danger mb-3">
                <div class="card-body">
                    <h6 class="card-title"><i class="bi bi-x-circle"></i> Rejected</h6>
                    <p class="card-text display-4">@ViewBag.TotalRejected</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-primary mb-3">
                <div class="card-body">
                    <h6 class="card-title"><i class="bi bi-graph-up"></i> Total Reviewed</h6>
                    <p class="card-text display-4">@ViewBag.TotalReviewed</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-3">
                <div class="card-header bg-warning">
                    <h4 class="mb-0"><i class="bi bi-clock-history"></i> Pending Approvals (@Model.PendingCount)</h4>
                </div>
                <div class="card-body">
                    @if (Model.PendingApprovals.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Student</th>
                                        <th>Student Number</th>
                                        <th>Course</th>
                                        <th>Department</th>
                                        <th>Submitted</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var enrollment in Model.PendingApprovals.Take(10))
                                    {
                                        <tr>
                                            <td>@enrollment.Student.FullName</td>
                                            <td>@enrollment.Student.StudentNumber</td>
                                            <td><strong>@enrollment.Course.CourseCode</strong> - @enrollment.Course.Name</td>
                                            <td>@enrollment.Course.Department</td>
                                            <td>@enrollment.SubmittedDate.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <a asp-action="ApprovalDetails" asp-route-id="@enrollment.Id" class="btn btn-sm btn-primary">
                                                    <i class="bi bi-eye"></i> Review
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        @if (Model.PendingApprovals.Count > 10)
                        {
                            <a asp-action="PendingApprovals" class="btn btn-primary">
                                <i class="bi bi-list"></i> View All Pending Approvals (@Model.PendingApprovals.Count)
                            </a>
                        }
                    }
                    else
                    {
                        <div class="alert alert-success">
                            <i class="bi bi-check-circle"></i> No pending approvals at this time. Great work!
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (ViewBag.RecentActivity != null && ViewBag.RecentActivity.Count > 0)
    {
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="mb-0"><i class="bi bi-activity"></i> Recent Activity</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Student</th>
                                        <th>Course</th>
                                        <th>Decision</th>
                                        <th>Comments</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var activity in ViewBag.RecentActivity)
                                    {
                                        var batch = activity.EnrollmentBatch;
                                        var enrollments = batch?.Enrollments as System.Collections.Generic.List<StudentEnrollmentSystem.Models.Enrollment>;
                                        var firstEnrollment = enrollments != null && enrollments.Count > 0 ? enrollments[0] : null;
                                        var courseCount = enrollments?.Count ?? 0;
                                        <tr>
                                            <td>@activity.ActionDate?.ToString("MMM dd, yyyy")</td>
                                            <td>@batch?.Student?.FullName</td>
                                            <td>
                                                @if (firstEnrollment != null)
                                                {
                                                    @firstEnrollment.Course?.CourseCode
                                                    if (courseCount > 1)
                                                    {
                                                        <span class="text-muted"> and @(courseCount - 1) more</span>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (activity.Status == StudentEnrollmentSystem.Models.Enums.ApprovalStatus.Approved)
                                                {
                                                    <span class="badge bg-success">Approved</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Rejected</span>
                                                }
                                            </td>
                                            <td>@(activity.Comments ?? "-")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="row">
        <div class="col-md-3">
            <div class="card text-white bg-primary mb-3">
                <div class="card-body">
                    <h5 class="card-title">Total Enrollments</h5>
                    <p class="card-text display-4">@ViewBag.TotalEnrollments</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning mb-3">
                <div class="card-body">
                    <h5 class="card-title">Pending Enrollments</h5>
                    <p class="card-text display-4">@ViewBag.PendingEnrollments</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success mb-3">
                <div class="card-body">
                    <h5 class="card-title">Completed</h5>
                    <p class="card-text display-4">@ViewBag.CompletedEnrollments</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info mb-3">
                <div class="card-body">
                    <h5 class="card-title">Total Courses</h5>
                    <p class="card-text display-4">@ViewBag.TotalCourses</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-lightning-fill"></i> Quick Actions</h4>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <a asp-controller="Course" asp-action="Index" class="btn btn-outline-primary w-100">
                                <i class="bi bi-book"></i> Manage Courses
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a asp-controller="Admin" asp-action="ManageCourses" class="btn btn-outline-success w-100">
                                <i class="bi bi-pencil-square"></i> Grade Students
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a asp-controller="Admin" asp-action="ManageStudents" class="btn btn-outline-info w-100">
                                <i class="bi bi-person-badge"></i> Manage Students
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a asp-controller="Admin" asp-action="Users" class="btn btn-outline-secondary w-100">
                                <i class="bi bi-people"></i> Manage Users
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

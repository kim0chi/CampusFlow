@model List<StudentEnrollmentSystem.Models.EnrollmentBatch>
@{
    ViewData["Title"] = "Pending Approvals";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2><i class="bi bi-clock-history"></i> Pending Approvals - @ViewBag.RoleName</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to Dashboard
    </a>
</div>
<hr />

@if (Model.Any())
{
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-funnel"></i> Search & Filter</h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-5">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                        <input type="text" id="searchBox" class="form-control" placeholder="Search by student name, number, or course code...">
                    </div>
                </div>
                <div class="col-md-3">
                    <select id="semesterFilter" class="form-select">
                        <option value="">All Semesters</option>
                        @foreach (var semester in Model.Select(eb => eb.Semester + " " + eb.AcademicYear).Distinct().OrderBy(s => s))
                        {
                            <option value="@semester.ToLower()">@semester</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <select id="sortBy" class="form-select">
                        <option value="date-desc">Newest First</option>
                        <option value="date-asc">Oldest First</option>
                        <option value="student">Student Name</option>
                        <option value="credits">Total Credits</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button id="clearFilters" class="btn btn-outline-secondary w-100">
                        <i class="bi bi-x-circle"></i> Clear
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-light">
            <div class="d-flex justify-content-between align-items-center">
                <span><strong>Total: <span id="totalCount">@Model.Count</span> enrollment batch(es)</strong></span>
                <span id="filteredInfo" class="text-muted" style="display: none;">Showing <span id="filteredCount">0</span> of @Model.Count</span>
            </div>
        </div>
        <div class="card-body p-0">
            <div id="noResults" class="alert alert-warning m-3" style="display: none;">
                <i class="bi bi-exclamation-triangle"></i> No enrollment batches match your search criteria.
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Batch ID</th>
                            <th>Student</th>
                            <th>Student Number</th>
                            <th>Semester</th>
                            <th>Courses</th>
                            <th>Total Credits</th>
                            <th>Submitted</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="enrollmentTableBody">
                        @foreach (var batch in Model)
                        {
                            var firstEnrollment = batch.Enrollments.FirstOrDefault();
                            var courseCount = batch.Enrollments.Count;
                            <tr class="enrollment-row"
                                data-student-name="@batch.Student.FullName.ToLower()"
                                data-student-number="@batch.Student.StudentNumber?.ToLower()"
                                data-course-codes="@string.Join(" ", batch.Enrollments.Select(e => e.Course.CourseCode.ToLower()))"
                                data-semester="@(batch.Semester + " " + batch.AcademicYear)".ToLower()"
                                data-submitted="@batch.SubmittedDate.ToString("yyyy-MM-dd")"
                                data-credits="@batch.TotalCredits">
                                <td><strong>#@batch.Id</strong></td>
                                <td>@batch.Student.FullName</td>
                                <td>@batch.Student.StudentNumber</td>
                                <td>
                                    <span class="badge bg-secondary">@batch.Semester @batch.AcademicYear</span>
                                </td>
                                <td>
                                    @if (firstEnrollment != null)
                                    {
                                        <div>
                                            <strong>@firstEnrollment.Course.CourseCode</strong>
                                            @if (courseCount > 1)
                                            {
                                                <span class="badge bg-primary">+@(courseCount - 1) more</span>
                                            }
                                            <br>
                                            <small class="text-muted">@courseCount course(s) total</small>
                                        </div>
                                    }
                                    else
                                    {
                                        <em class="text-muted">No courses</em>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-warning text-dark">@batch.TotalCredits credits</span>
                                </td>
                                <td>
                                    <small>@batch.SubmittedDate.ToLocalTime().ToString("MMM dd, yyyy")<br />@batch.SubmittedDate.ToLocalTime().ToString("hh:mm tt")</small>
                                </td>
                                <td>
                                    <a asp-action="ApprovalDetails" asp-route-id="@batch.Id" class="btn btn-sm btn-primary">
                                        <i class="bi bi-eye"></i> Review
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-success">
        <i class="bi bi-check-circle"></i> <strong>All caught up!</strong> No pending approvals at this time.
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            const searchBox = $('#searchBox');
            const semesterFilter = $('#semesterFilter');
            const sortBy = $('#sortBy');
            const clearButton = $('#clearFilters');
            const noResults = $('#noResults');
            const filteredInfo = $('#filteredInfo');
            const filteredCount = $('#filteredCount');

            function filterAndSort() {
                const searchTerm = searchBox.val().toLowerCase();
                const selectedSemester = semesterFilter.val().toLowerCase();
                let visibleCount = 0;

                $('.enrollment-row').each(function() {
                    const studentName = $(this).data('student-name');
                    const studentNumber = $(this).data('student-number') || '';
                    const courseCodes = $(this).data('course-codes');
                    const semester = $(this).data('semester');

                    const matchesSearch = searchTerm === '' ||
                        studentName.includes(searchTerm) ||
                        studentNumber.includes(searchTerm) ||
                        courseCodes.includes(searchTerm);

                    const matchesSemester = selectedSemester === '' || semester === selectedSemester;

                    const matches = matchesSearch && matchesSemester;
                    $(this).toggle(matches);
                    if (matches) visibleCount++;
                });

                noResults.toggle(visibleCount === 0);

                if (searchTerm !== '' || selectedSemester !== '') {
                    filteredInfo.show();
                    filteredCount.text(visibleCount);
                } else {
                    filteredInfo.hide();
                }

                sortRows();
            }

            function sortRows() {
                const sortValue = sortBy.val();
                const tbody = $('#enrollmentTableBody');
                const rows = tbody.find('.enrollment-row:visible').toArray();

                rows.sort(function(a, b) {
                    switch(sortValue) {
                        case 'date-asc':
                            return $(a).data('submitted').localeCompare($(b).data('submitted'));
                        case 'date-desc':
                            return $(b).data('submitted').localeCompare($(a).data('submitted'));
                        case 'student':
                            return $(a).data('student-name').localeCompare($(b).data('student-name'));
                        case 'credits':
                            return $(b).data('credits') - $(a).data('credits');
                        default:
                            return 0;
                    }
                });

                // Reorder visible rows
                const allRows = tbody.find('.enrollment-row').toArray();
                const hiddenRows = allRows.filter(row => !$(row).is(':visible'));

                tbody.empty();
                rows.forEach(row => tbody.append(row));
                hiddenRows.forEach(row => tbody.append(row));
            }

            searchBox.on('keyup', filterAndSort);
            semesterFilter.on('change', filterAndSort);
            sortBy.on('change', sortRows);

            clearButton.on('click', function() {
                searchBox.val('');
                semesterFilter.val('');
                sortBy.val('date-desc');
                filterAndSort();
            });
        });
    </script>
}

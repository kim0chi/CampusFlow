@model IEnumerable<StudentEnrollmentSystem.Models.QuarterPeriod>

@{
    ViewData["Title"] = "Quarter Periods";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Quarter Periods & Payment Management</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Quarter Period
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i>
        <strong>About Quarter Periods:</strong> Quarter periods define academic quarters (Prelim, Midterm, Semi-Final, Finals) and enforce the 30% payment requirement per quarter.
        Students must pay at least 30% of their total accumulated balance before the payment deadline or request a promissory note.
    </div>

    <div class="card">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-calendar2-week-fill" style="font-size: 3rem; color: #6c757d;"></i>
                    <p class="mt-3 text-muted">No quarter periods found. Create one to start tracking quarterly payments.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Quarter</th>
                                <th>Semester</th>
                                <th>Academic Year</th>
                                <th>Period</th>
                                <th>Payment Deadline</th>
                                <th>Status</th>
                                <th>Requirements</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var period in Model)
                            {
                                var now = DateTime.UtcNow;
                                var isActive = period.IsActive && now >= period.StartDate && now <= period.EndDate;
                                var isPast = now > period.EndDate;
                                var isFuture = now < period.StartDate;
                                var requirementsCount = period.PaymentRequirements?.Count ?? 0;

                                <tr>
                                    <td>
                                        <span class="badge bg-primary">@period.Quarter</span>
                                    </td>
                                    <td>@period.Semester</td>
                                    <td>@period.AcademicYear</td>
                                    <td>
                                        @period.StartDate.ToString("MMM dd") - @period.EndDate.ToString("MMM dd, yyyy")
                                    </td>
                                    <td>
                                        <strong>@period.PaymentDeadline.ToString("MMM dd, yyyy")</strong>
                                        @if (period.PaymentDeadline < now && isActive)
                                        {
                                            <br /><span class="badge bg-danger small">Overdue</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!period.IsActive)
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                        else if (isActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else if (isPast)
                                        {
                                            <span class="badge bg-secondary">Ended</span>
                                        }
                                        else if (isFuture)
                                        {
                                            <span class="badge bg-info">Upcoming</span>
                                        }
                                    </td>
                                    <td>
                                        @if (requirementsCount > 0)
                                        {
                                            <a asp-action="Requirements" asp-route-id="@period.Id" class="btn btn-sm btn-outline-info">
                                                <i class="bi bi-list-check"></i> @requirementsCount students
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">None</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Edit" asp-route-id="@period.Id" class="btn btn-outline-primary">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <form asp-action="ToggleActive" asp-route-id="@period.Id" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-@(period.IsActive ? "warning" : "success")"
                                                        title="@(period.IsActive ? "Deactivate" : "Activate")">
                                                    <i class="bi bi-@(period.IsActive ? "pause" : "play")-circle"></i>
                                                </button>
                                            </form>
                                            <form asp-action="GenerateRequirements" asp-route-id="@period.Id" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-success" title="Generate payment requirements for all students">
                                                    <i class="bi bi-calculator"></i>
                                                </button>
                                            </form>
                                            <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@period.Id">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>

                                        <!-- Delete Confirmation Modal -->
                                        <div class="modal fade" id="deleteModal-@period.Id" tabindex="-1">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Confirm Delete</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        Are you sure you want to delete this quarter period?
                                                        <br><strong>@period.Quarter - @period.Semester @period.AcademicYear</strong>
                                                        @if (requirementsCount > 0)
                                                        {
                                                            <div class="alert alert-warning mt-3">
                                                                <i class="bi bi-exclamation-triangle"></i>
                                                                This period has @requirementsCount payment requirements and cannot be deleted.
                                                            </div>
                                                        }
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                        @if (requirementsCount == 0)
                                                        {
                                                            <form asp-action="Delete" asp-route-id="@period.Id" method="post" class="d-inline">
                                                                @Html.AntiForgeryToken()
                                                                <button type="submit" class="btn btn-danger">Delete</button>
                                                            </form>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    <div class="mt-3">
        <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Admin Dashboard
        </a>
    </div>
</div>

@model StudentEnrollmentSystem.Models.QuarterPeriod

@{
    ViewData["Title"] = "Edit Quarter Period";
}

<div class="container mt-4">
    <h2>Edit Quarter Period</h2>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="CreatedBy" />
                        <input type="hidden" asp-for="CreatedDate" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Quarter" class="form-label">Quarter</label>
                            <select asp-for="Quarter" class="form-select">
                                <option value="0">Prelim</option>
                                <option value="1">Midterm</option>
                                <option value="2">Semi-Final</option>
                                <option value="3">Finals</option>
                            </select>
                            <span asp-validation-for="Quarter" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Semester" class="form-label">Semester</label>
                            <select asp-for="Semester" class="form-select">
                                <option value="First Semester">First Semester</option>
                                <option value="Second Semester">Second Semester</option>
                                <option value="Summer">Summer</option>
                            </select>
                            <span asp-validation-for="Semester" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AcademicYear" class="form-label">Academic Year</label>
                            <input asp-for="AcademicYear" class="form-control" />
                            <span asp-validation-for="AcademicYear" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="StartDate" class="form-label">Start Date</label>
                                <input asp-for="StartDate" type="datetime-local" class="form-control"
                                       value="@Model.StartDate.ToString("yyyy-MM-ddTHH:mm")" />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="EndDate" class="form-label">End Date</label>
                                <input asp-for="EndDate" type="datetime-local" class="form-control"
                                       value="@Model.EndDate.ToString("yyyy-MM-ddTHH:mm")" />
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PaymentDeadline" class="form-label">Payment Deadline</label>
                            <input asp-for="PaymentDeadline" type="datetime-local" class="form-control"
                                   value="@Model.PaymentDeadline.ToString("yyyy-MM-ddTHH:mm")" />
                            <span asp-validation-for="PaymentDeadline" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="IsActive" type="checkbox" class="form-check-input" />
                            <label asp-for="IsActive" class="form-check-label">Active</label>
                        </div>

                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i>
                            <strong>Warning:</strong> Changes take effect immediately and may affect students' ability to enroll.
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Save Changes
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-body">
                    <h5 class="card-title">Period Information</h5>
                    <table class="table table-sm">
                        <tr>
                            <th width="120">Created By:</th>
                            <td>@(Model.CreatedByUser?.Email ?? "System")</td>
                        </tr>
                        <tr>
                            <th>Created:</th>
                            <td>@Model.CreatedDate.ToString("MMM dd, yyyy")</td>
                        </tr>
                        <tr>
                            <th>Requirements:</th>
                            <td>
                                <a asp-action="Requirements" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-info">
                                    View @(Model.PaymentRequirements?.Count ?? 0) Requirements
                                </a>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

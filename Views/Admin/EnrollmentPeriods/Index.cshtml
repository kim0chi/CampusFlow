@model IEnumerable<StudentEnrollmentSystem.Models.EnrollmentPeriod>

@{
    ViewData["Title"] = "Enrollment Periods";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Enrollment Periods</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Period
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-calendar-x" style="font-size: 3rem; color: #6c757d;"></i>
                    <p class="mt-3 text-muted">No enrollment periods found. Create one to get started.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Semester</th>
                                <th>Academic Year</th>
                                <th>Open Date</th>
                                <th>Close Date</th>
                                <th>Status</th>
                                <th>Created By</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var period in Model)
                            {
                                var now = DateTime.UtcNow;
                                var isCurrentlyOpen = period.IsActive && now >= period.OpenDate && now <= period.CloseDate;
                                var isPast = now > period.CloseDate;
                                var isFuture = now < period.OpenDate;

                                <tr>
                                    <td>@period.Semester</td>
                                    <td>@period.AcademicYear</td>
                                    <td>@period.OpenDate.ToString("MMM dd, yyyy hh:mm tt")</td>
                                    <td>@period.CloseDate.ToString("MMM dd, yyyy hh:mm tt")</td>
                                    <td>
                                        @if (!period.IsActive)
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                        else if (isCurrentlyOpen)
                                        {
                                            <span class="badge bg-success">Open</span>
                                        }
                                        else if (isPast)
                                        {
                                            <span class="badge bg-danger">Closed</span>
                                        }
                                        else if (isFuture)
                                        {
                                            <span class="badge bg-info">Upcoming</span>
                                        }
                                    </td>
                                    <td>@(period.CreatedByUser?.Email ?? "System")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Edit" asp-route-id="@period.Id" class="btn btn-outline-primary">
                                                <i class="bi bi-pencil"></i> Edit
                                            </a>
                                            <form asp-action="ToggleActive" asp-route-id="@period.Id" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-@(period.IsActive ? "warning" : "success")">
                                                    <i class="bi bi-@(period.IsActive ? "pause" : "play")-circle"></i>
                                                    @(period.IsActive ? "Deactivate" : "Activate")
                                                </button>
                                            </form>
                                            <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@period.Id">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </div>

                                        <!-- Delete Confirmation Modal -->
                                        <div class="modal fade" id="deleteModal-@period.Id" tabindex="-1">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Confirm Delete</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        Are you sure you want to delete this enrollment period?
                                                        <br><strong>@period.Semester @period.AcademicYear</strong>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                        <form asp-action="Delete" asp-route-id="@period.Id" method="post" class="d-inline">
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="btn btn-danger">Delete</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    <div class="mt-3">
        <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Admin Dashboard
        </a>
    </div>
</div>

@model List<StudentEnrollmentSystem.Models.ApplicationUser>
@{
    ViewData["Title"] = "Manage Users";
}

<h2>Manage Users</h2>
<hr />

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Student Number</th>
                    <th>Department</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.FullName</td>
                        <td>@user.Email</td>
                        <td>@(user.StudentNumber ?? "N/A")</td>
                        <td>@(user.Department?.Name ?? "N/A")</td>
                        <td>
                            <a asp-action="ManageRoles" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Manage Roles</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <p>No users found.</p>
    </div>
}

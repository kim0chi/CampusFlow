@model List<StudentEnrollmentSystem.Models.ApplicationUser>
@{
    ViewData["Title"] = "Manage Students";
    var departments = ViewBag.Departments as List<string> ?? new List<string>();
    var yearLevels = ViewBag.YearLevels as string[] ?? Array.Empty<string>();
    var search = ViewBag.Search as string;
    var selectedDepartment = ViewBag.SelectedDepartment as string;
    var selectedYearLevel = ViewBag.SelectedYearLevel as string;
}

<h2>Manage Students</h2>
<hr />

<div class="card mb-4">
    <div class="card-header">
        <h5><i class="bi bi-search"></i> Search & Filter</h5>
    </div>
    <div class="card-body">
        <form method="get" asp-action="ManageStudents">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label class="form-label">Search</label>
                    <input type="text" name="search" class="form-control" value="@search" placeholder="Name, student number, or email..." />
                </div>
                <div class="col-md-3 mb-3">
                    <label class="form-label">Department</label>
                    <select name="department" class="form-select">
                        <option value="">All Departments</option>
                        @foreach (var dept in departments)
                        {
                            <option value="@dept" selected="@(dept == selectedDepartment)">@dept</option>
                        }
                    </select>
                </div>
                <div class="col-md-3 mb-3">
                    <label class="form-label">Year Level</label>
                    <select name="yearLevel" class="form-select">
                        <option value="">All Years</option>
                        @foreach (var year in yearLevels)
                        {
                            <option value="@year" selected="@(year == selectedYearLevel)">@year</option>
                        }
                    </select>
                </div>
                <div class="col-md-2 mb-3">
                    <label class="form-label">&nbsp;</label>
                    <div>
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-search"></i> Search
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5>Students (@Model.Count)</h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Student Number</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Department</th>
                            <th>Major</th>
                            <th>Year</th>
                            <th>GPA</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in Model)
                        {
                            <tr>
                                <td>@student.StudentNumber</td>
                                <td>@student.FullName</td>
                                <td>@student.Email</td>
                                <td>@student.Department</td>
                                <td>@student.Major</td>
                                <td>@student.YearOfStudy</td>
                                <td>
                                    @if (student.GPA.HasValue)
                                    {
                                        <span>@student.GPA.Value.ToString("F2")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">â€”</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="EditStudentAcademics" asp-route-id="@student.Id" class="btn btn-sm btn-primary">
                                        <i class="bi bi-pencil"></i> Edit Academics
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-muted">No students found.</p>
        }
    </div>
</div>

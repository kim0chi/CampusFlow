@{
    ViewData["Title"] = "Manage User Roles";
    var user = ViewBag.User as StudentEnrollmentSystem.Models.ApplicationUser;
    var userRoles = ViewBag.UserRoles as List<string>;
    var allRoles = ViewBag.AllRoles as List<string>;
}

<h2>Manage Roles for @user!.FullName</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h4>User Information</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Name:</dt>
                    <dd class="col-sm-8">@user.FullName</dd>

                    <dt class="col-sm-4">Email:</dt>
                    <dd class="col-sm-8">@user.Email</dd>

                    <dt class="col-sm-4">Student Number:</dt>
                    <dd class="col-sm-8">@(user.StudentNumber ?? "N/A")</dd>

                    <dt class="col-sm-4">Department:</dt>
                    <dd class="col-sm-8">@(user.Department?.Name ?? "N/A")</dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h4>Current Roles</h4>
            </div>
            <div class="card-body">
                @if (userRoles!.Any())
                {
                    <ul class="list-group">
                        @foreach (var role in userRoles)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span class="badge bg-primary">@role</span>
                                <form asp-action="RemoveRole" method="post" class="d-inline">
                                    <input type="hidden" name="userId" value="@user.Id" />
                                    <input type="hidden" name="roleName" value="@role" />
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to remove this role?')">Remove</button>
                                </form>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p>No roles assigned yet.</p>
                }
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h4>Add Role</h4>
            </div>
            <div class="card-body">
                <form asp-action="AddRole" method="post">
                    <input type="hidden" name="userId" value="@user.Id" />
                    <div class="mb-3">
                        <label for="roleName" class="form-label">Select Role</label>
                        <select name="roleName" class="form-select" required>
                            <option value="">-- Select a Role --</option>
                            @foreach (var role in allRoles!)
                            {
                                @if (!userRoles.Contains(role))
                                {
                                    <option value="@role">@role</option>
                                }
                            }
                        </select>
                    </div>
                    <button type="submit" class="btn btn-success">Add Role</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Users" class="btn btn-secondary">Back to Users</a>
</div>

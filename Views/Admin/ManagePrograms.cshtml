@model List<StudentEnrollmentSystem.Models.Program>
@{
    ViewData["Title"] = "Manage Programs";
}

<div class="row">
    <div class="col-md-12">
        <h2>Manage Programs (Prospectus/Curriculum)</h2>
        <hr />

        <div class="mb-3">
            <a asp-action="CreateProgram" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Program
            </a>
        </div>

        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Program Name</th>
                            <th>Department</th>
                            <th>Total Credits Required</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var program in Model)
                        {
                            <tr class="@(program.IsActive ? "" : "table-secondary")">
                                <td>
                                    <strong>@program.Name</strong>
                                    @if (!string.IsNullOrEmpty(program.Description))
                                    {
                                        <br />
                                        <small class="text-muted">@program.Description</small>
                                    }
                                </td>
                                <td>
                                    @if (program.Department != null)
                                    {
                                        <span class="badge bg-info">@program.Department.Code</span>
                                        <br />
                                        <small>@program.Department.Name</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No Department</span>
                                    }
                                </td>
                                <td>@program.TotalCreditsRequired credits</td>
                                <td>
                                    @if (program.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="ManageProgramCourses" asp-route-id="@program.Id" class="btn btn-sm btn-info" title="Manage Curriculum">
                                        <i class="bi bi-book"></i> Curriculum
                                    </a>
                                    <a asp-action="EditProgram" asp-route-id="@program.Id" class="btn btn-sm btn-warning" title="Edit Program">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <form asp-action="ToggleProgramStatus" asp-route-id="@program.Id" method="post" class="d-inline">
                                        @if (program.IsActive)
                                        {
                                            <button type="submit" class="btn btn-sm btn-secondary" onclick="return confirm('Are you sure you want to deactivate this program?')" title="Deactivate">
                                                <i class="bi bi-toggle-off"></i> Deactivate
                                            </button>
                                        }
                                        else
                                        {
                                            <button type="submit" class="btn btn-sm btn-success" onclick="return confirm('Are you sure you want to activate this program?')" title="Activate">
                                                <i class="bi bi-toggle-on"></i> Activate
                                            </button>
                                        }
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> No programs found. Create one to get started.
            </div>
        }
    </div>
</div>

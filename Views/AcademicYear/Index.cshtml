@model List<StudentEnrollmentSystem.Models.AcademicYear>
@{
    ViewData["Title"] = "Manage Academic Years";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2><i class="bi bi-calendar-range"></i> Manage Academic Years</h2>
    <div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Academic Year
        </a>
        <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Admin
        </a>
    </div>
</div>
<hr />

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (Model.Any())
{
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-list"></i> Academic Years (@Model.Count)</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Academic Year</th>
                            <th>Status</th>
                            <th>Current Year</th>
                            <th>Created Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var year in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@year.Year</strong>
                                    @if (year.IsCurrentYear)
                                    {
                                        <span class="badge bg-success ms-2">
                                            <i class="bi bi-star-fill"></i> Current
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (year.IsActive)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Active
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-x-circle"></i> Inactive
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (year.IsCurrentYear)
                                    {
                                        <span class="text-success">
                                            <i class="bi bi-check-lg"></i> Yes
                                        </span>
                                    }
                                    else
                                    {
                                        <form asp-action="SetCurrent" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@year.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-success"
                                                    onclick="return confirm('Set @year.Year as the current academic year?')">
                                                <i class="bi bi-star"></i> Set as Current
                                            </button>
                                        </form>
                                    }
                                </td>
                                <td>
                                    <small>@year.CreatedDate.ToLocalTime().ToString("MMM dd, yyyy")</small>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@year.Id" class="btn btn-sm btn-info">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <form asp-action="ToggleActive" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@year.Id" />
                                            <button type="submit" class="btn btn-sm btn-warning">
                                                <i class="bi bi-toggle-@(year.IsActive ? "on" : "off")"></i>
                                                @(year.IsActive ? "Deactivate" : "Activate")
                                            </button>
                                        </form>
                                        <form asp-action="Delete" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@year.Id" />
                                            <button type="submit" class="btn btn-sm btn-danger"
                                                    onclick="return confirm('Are you sure you want to delete @year.Year? This cannot be undone.')">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="alert alert-info mt-4">
        <h6><i class="bi bi-info-circle"></i> Information</h6>
        <ul class="mb-0">
            <li><strong>Current Year:</strong> Only one academic year can be marked as current at a time. This is the default year shown to students when enrolling.</li>
            <li><strong>Active Status:</strong> Only active academic years will be available for selection during enrollment.</li>
            <li><strong>Delete:</strong> Academic years with existing enrollments cannot be deleted.</li>
        </ul>
    </div>
}
else
{
    <div class="alert alert-warning">
        <h5><i class="bi bi-exclamation-triangle"></i> No Academic Years Found</h5>
        <p>You haven't created any academic years yet. Click the "Add Academic Year" button to create one.</p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Academic Year
        </a>
    </div>
}

@model StudentEnrollmentSystem.Models.ApplicationUser
@{
    ViewData["Title"] = "Registration Rejected";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card mt-5">
            <div class="card-body text-center p-5">
                <div class="mb-4">
                    <i class="bi bi-x-circle" style="font-size: 4rem; color: #dc3545;"></i>
                </div>

                <h2 class="card-title">Registration Not Approved</h2>
                <hr />

                <div class="alert alert-danger">
                    <h5>Dear @Model.FullName,</h5>
                    <p>
                        We regret to inform you that your registration could not be approved at this time.
                    </p>
                </div>

                @if (!string.IsNullOrEmpty(Model.RejectionReason))
                {
                    <div class="text-start mt-4">
                        <h5>Reason:</h5>
                        <div class="card bg-light">
                            <div class="card-body">
                                <p class="mb-0">@Model.RejectionReason</p>
                            </div>
                        </div>
                    </div>
                }

                <div class="text-start mt-4">
                    <h5>What can you do?</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="bi bi-envelope text-primary"></i>
                            Contact the admissions office at <strong>admissions@university.edu</strong>
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-telephone text-success"></i>
                            Call us at <strong>+63 2 1234 5678</strong> for more information
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-building text-info"></i>
                            Visit the Dean's Office during office hours (Mon-Fri, 8AM-5PM)
                        </li>
                    </ul>
                </div>

                <div class="mt-4">
                    <form asp-action="Logout" asp-controller="Account" method="post" class="d-inline">
                        <button type="submit" class="btn btn-secondary">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@model StudentEnrollmentSystem.Models.ApplicationUser
@{
    ViewData["Title"] = "Registration Pending";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card mt-5">
            <div class="card-body text-center p-5">
                <div class="mb-4">
                    <i class="bi bi-hourglass-split" style="font-size: 4rem; color: #ffc107;"></i>
                </div>

                <h2 class="card-title">Registration Pending Approval</h2>
                <hr />

                <div class="alert alert-warning">
                    <h5>Welcome, @Model.FullName!</h5>
                    <p class="mb-0">
                        Your registration has been successfully submitted and is currently under review by the administration.
                    </p>
                </div>

                <div class="text-start mt-4">
                    <h5>What happens next?</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="bi bi-check-circle text-success"></i>
                            Your account has been created with email: <strong>@Model.Email</strong>
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-clock text-warning"></i>
                            The administration will review your registration
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-envelope text-primary"></i>
                            You will be notified via email once your registration is approved
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-person-badge text-info"></i>
                            Upon approval, you will be assigned a student number and department
                        </li>
                    </ul>
                </div>

                <div class="mt-4">
                    <p class="text-muted">
                        <small>This process usually takes 1-2 business days. Please check back later or wait for our email notification.</small>
                    </p>
                </div>

                <div class="mt-4">
                    <form asp-action="Logout" asp-controller="Account" method="post" class="d-inline">
                        <button type="submit" class="btn btn-secondary">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
